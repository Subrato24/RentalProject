@model CustomerStatus

<form asp-action="EditCustomer" method="post">
    <div class="form-group">
        <label asp-for="Rent">Rent</label>
        <input asp-for="Rent" class="form-control" id="customername" placeholder="Enter Rent Amount">
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Ebill">Ebill</label>
        <input asp-for="Ebill" class="form-control" id="customername" placeholder="Enter Electricity Bill">
    </div>
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control" type="date" id="customeraddress" placeholder="Enter Date">
    </div>
    <div class="form-group">
        <label asp-for="Due">Due</label>
        <input asp-for="Due" class="form-control" id="depositeamount" placeholder="Enter Due Amount">
    </div>
    <div class="form-group">
        <label asp-for="Status">Status</label>
        <input asp-for="Status" class="form-control" id="joiningdate" placeholder="Enter Status">
    </div>
    <div class="d-flex gap-2">
        <div style="margin-top:4px"><button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Update</button></div>
        <div style="margin-top:4px"><a asp-controller="CustomerStatus" asp-action="Index" class="btn btn-dark"><i class="bi bi-backspace"></i> Back</a></div>
    </div>
</form>

