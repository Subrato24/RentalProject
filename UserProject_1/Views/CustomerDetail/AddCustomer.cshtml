@model CustomerDetails
<h1>Customer Addition</h1>

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <!-- Form row with columns for a more compact layout -->
        <div class="row">
            <!-- Name field -->
            <div class="form-group col-md-6">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name">
            </div>
            <!-- Phone field -->
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter Phone number">
            </div>
        </div>

        <div class="row">
            <!-- Address field -->
            <div class="form-group col-md-12">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Enter Address">
            </div>
        </div>


        <div class="row">
            <!-- Deposit field -->
            <div class="form-group col-md-6">
                <label asp-for="Deposit">Deposit</label>
                <input asp-for="Deposit" class="form-control" placeholder="Enter Deposit Amount">
            </div>

            <!-- Joining Date field -->
            <div class="form-group col-md-6">
                <label asp-for="JoiningDate">Joining</label>
                <input asp-for="JoiningDate" type="date" class="form-control" placeholder="Enter Joining Date">
            </div>
        </div>

        <div class="form-group col-md-6">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email">
</div>

        <div class="row" style="margin-block:8px">
            <!-- Profile Image Upload -->
            <div class="form-group col-md-12">
                <label for="ProfileImage">Upload Profile Picture</label>
                <!-- Smaller file input by applying a custom class -->
                <input type="file" name="ProfileImage" class="form-control-sm" accept="image/*">
            </div>
        </div>

        <div class="row" style="margin-block:8px">
            <!-- Profile Image Upload -->
            <div class="form-group col-md-12">
                <label for="IdProof">Upload IdProof</label>
                <!-- Smaller file input by applying a custom class -->
                <input type="file" name="IdProof" class="form-control-sm" accept="image/*">
            </div>
        </div>

        <!-- Action buttons row -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> Add</button>
            <a asp-controller="CustomerDetail" asp-action="Index" class="btn btn-dark"><i class="bi bi-backspace"></i> Back</a>
        </div>
    </div>
</form>
