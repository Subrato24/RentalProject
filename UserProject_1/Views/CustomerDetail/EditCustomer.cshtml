@model CustomerDetails

    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" id="customername" placeholder="Enter Name">
        </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" id="customername" placeholder="Enter Email">
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="CustomerDetailId" />
    </div>
        <div class="form-group">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" id="customername" placeholder="Enter Phone Number">
        </div>
        <div class="form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" id="customeraddress" placeholder="Enter Address">
        </div>
        <div class="form-group">
            <label asp-for="Deposit">Deposit</label>
            <input asp-for="Deposit" class="form-control" id="depositeamount" placeholder="Enter Deposit Amount">
        </div>
        <div class="form-group">
            <label asp-for="JoiningDate">Joining</label>
        <input asp-for="JoiningDate" type="date" class="form-control" id="joiningdate" placeholder="Enter Joining Date">
        </div>
        <div class="d-flex gap-2">
        <div style="margin-top:4px"><button type="submit" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Update</button></div>
        <div style="margin-top:4px"><a asp-controller="CustomerDetail" asp-action="Index" class="btn btn-dark"><i class="bi bi-backspace"></i> Back</a></div>
        </div>
    </form>

